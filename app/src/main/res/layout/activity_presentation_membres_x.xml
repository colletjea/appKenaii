<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PresentationMembresX">

    <ImageView
        android:id="@+id/photo_membre"
        android:layout_width="201dp"
        android:layout_height="214dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/photo_clem" />

    <TextView
        android:id="@+id/textePrenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nom_Clememnce"
        app:layout_constraintBottom_toTopOf="@+id/texteFiliere"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo_membre"
        app:layout_constraintVertical_bias="0.472" />

    <TextView
        android:id="@+id/texteFiliere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="Filière : E4FE"
        app:layout_constraintBottom_toTopOf="@+id/textePoste"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo_membre"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textePoste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:text="Poste : Présidente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo_membre" />

    <TextView
        android:id="@+id/textSport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:text="Sport.s pratiqué.s : Danse et Crossfit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo_membre" />
</androidx.constraintlayout.widget.ConstraintLayout>