<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/ic_launcher_foreground">

    <!-- entête -->
    <ImageView
        android:id="@+id/logoKenai"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logokenai"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"/>


    <!-- grille -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/logoKenai"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:background="#FFFFFF"
        android:columnCount="2"
        android:rowCount="3">


        <!-- cardView n°1 : [0;0]  membres-->
        <androidx.cardview.widget.CardView
            android:id="@+id/boutonMembres"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">
            <Button
                android:id="@+id/buttonMembres"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00E91E63"
                android:backgroundTint="#00E91E63"
                android:text=""
                android:textColor="#00E91E63" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ButMembres"
                    android:layout_width="108dp"
                    android:layout_height="110dp"
                    android:src="@drawable/logo_trombinoscope" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <!-- cardView n°2 : [0;1]  referents-->
        <androidx.cardview.widget.CardView
            android:id="@+id/boutonReferents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <Button
                android:id="@+id/buttonReferentsSports"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00E91E63"
                android:backgroundTint="#00E91E63"
                android:text=""
                android:textColor="#00E91E63" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/logo_referentssports" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- cardView n°3 [1;0]  evenements -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <Button
                android:id="@+id/buttonVersEvent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00E91E63"
                android:backgroundTint="#00E91E63"
                android:text=""
                android:textColor="#00E91E63" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"

                    android:src="@drawable/logo_evenements" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- cardView n°4 : [1;1]  planning des sports-->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <Button
                android:id="@+id/buttonVersPlanning"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00E91E63"
                android:backgroundTint="#00E91E63"
                android:text=""
                android:textColor="#00E91E63" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/logo_planning_des_sports" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- cardView n°5 : [2;0]  FAQ-->
        <androidx.cardview.widget.CardView
            android:id="@+id/boutonFAQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <Button
                android:id="@+id/buttonVersFAQ"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00E91E63"
                android:backgroundTint="#00E91E63"
                android:text=""
                android:textColor="#00E91E63" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/logo_faq" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- cardView n°6 : [2;1]  bonus-->
        <androidx.cardview.widget.CardView
            android:id="@+id/boutonBonus"
            android:layout_width="wrap_content"
            android:layout_height="81dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <Button
                android:id="@+id/buttonVersBonus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00E91E63"
                android:backgroundTint="#00E91E63"
                android:text=""
                android:textColor="#00E91E63" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/logo_bonus" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </GridLayout>



</RelativeLayout>